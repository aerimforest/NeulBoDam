<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburi_regular"
            android:gravity="center"
            android:text="늘보담"
            android:textColor="@color/main_color"
            android:textSize="50sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="80dp">

            <EditText
                android:id="@+id/email_login_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="no"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:hint="이메일"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/main_color"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <EditText
                android:id="@+id/password_login_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="no"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:hint="비밀번호"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:textColorHint="@color/main_color"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_email_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_email_login"
            android:fontFamily="@font/notosans_cjkkr_bold"
            android:text="이메일로 로그인 및 회원가입"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>